// apps/hotel-core/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  address     String
  stars       Int      @default(1)
  createdAt   DateTime @default(now())
}