// apps/auth-service/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definimos los roles posibles en el sistema
enum Role {
  ADMIN
  HOTEL_MANAGER
  CLIENT
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  cedula    String   @unique
  phone     String?
  role      Role     @default(CLIENT)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // Soft delete
  updatedBy Int?      // Usuario que realizó la última modificación

  // Relación opcional para seguimiento de auditoría
  updater   User?    @relation("UserUpdater", fields: [updatedBy], references: [id])

  // AGREGA ESTA LÍNEA (Lado B: La inversa requerida por Prisma)
  usersUpdated User[] @relation("UserUpdater")
}